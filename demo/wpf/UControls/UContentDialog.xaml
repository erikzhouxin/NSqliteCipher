<vm:BindingViewControl x:Class="TestWPFUI.SQLiteCipher.UControls.UContentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestWPFUI.SQLiteCipher.UControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:TestWPFUI.SQLiteCipher.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Visibility="Collapsed">
    <vm:BindingViewControl.Background>
        <SolidColorBrush Color="Black" Opacity="0.4"  />
    </vm:BindingViewControl.Background>
    <Border CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center" Background="{StaticResource MaterialDesignPaper}">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.5" />
        </Border.Effect>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentControl Margin="5" Content="{Binding Body}" />
        </ScrollViewer>
    </Border>
</vm:BindingViewControl>
